<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">
 
  <targets>
    <target 
      name="appLogfile" 
      xsi:type="File" 
      layout="${longdate} | ${level:uppercase=true:padding=-5} | ${message} | ${exception:format=tostring}"
      deleteOldFileOnStartup="false"
      concurrentWrites="true"
      KeepFileOpen ="false"
      fileName="${basedir}/autoprintr.log"
    />
    <target 
      name="serviceLogfile" 
      xsi:type="File" 
      layout="${longdate} | ${level:uppercase=true:padding=-5} | ${message} | ${exception:format=tostring}"
      deleteOldFileOnStartup="false"
      concurrentWrites="true"
      KeepFileOpen ="false"
      fileName="${basedir}/autoprintrService.log"
    />
  </targets>
  <rules>
    <!--  
    Log levels:
      - Fatal
      - Error
      - Warn
      - Info
      - Debug
      - Trace 
       Log level is "minlevel" -->
    <logger name="AutoPrintr.*" minlevel="Warn" writeTo="appLogfile" />
    <logger name="AutoPrintrService.*" minlevel="Debug" writeTo="serviceLogfile" />
  </rules>

</nlog>
